<!DOCTYPE html>
<html>
<head>
    <title>Live GPS Tracker</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <style>#map { height: 100vh; }</style>
</head>
<body>
    <div id="map"></div>

    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const trackingId = window.location.pathname.split('/').pop();

        const map = L.map('map').setView([9.0820, 8.6753], 6);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', { maxZoom: 19 }).addTo(map);

        const marker = L.marker([9.0820, 8.6753]).addTo(map)
            .bindPopup(`${trackingId} Vehicle`);

        const socket = io();
        socket.on(`locationUpdate-${trackingId}`, (coords) => {
            marker.setLatLng(coords);
            marker.getPopup().setContent(`${trackingId} Location: ${coords}`);
            map.panTo(coords);
        });
    </script>
</body>
</html>
